//- Main website footer

//- Footer nav item link mixin
	Declare:
	Page object â€“ properties corresponde with "itemData" properties
	SVG icon path
	Inbound or outbound targeting
mixin footerItem(itemData, linkIcon, linkTarget)
	li.ap-c-mdl-footer__item
		a.ap-c-btn-uncontained(
			href= itemData.link
			title= itemData.info
			target= linkTarget
		)
			span= itemData.name
			svg(
				width="16" 
				height="16" 
				viewBox="0 0 16 16" 
				fill="none" 
				xmlns="http://www.w3.org/2000/svg"
			)
				path(
					fill-rule= "evenodd" 
					clip-rule= "evenodd" 
					d= linkIcon 
					fill="black"
				)

//- Website footer section
section.ap-c-scn.ap-c-scn--footer
	//- Footer content module
	div.ap-c-mdl-footer
		//- Contact
		address.ap-c-mdl-footer__contact
			h4.ap-c-mdl-footer__label Contact
			p To contact Grazyna in regard to exhibitions, commisions, lessons, or other inquiries, send an email to #[a(href= email.link title= email.info) #[span= email.name]]
			+button(
				"Contact Grazyna",
				iconEmail,
				email.link,
				email.info,
				"_blank"
			)
		//- Navigation
		div.ap-c-mdl-footer__navigation
			nav.ap-c-mdl-footer__group
				h4.ap-c-mdl-footer__label Info
